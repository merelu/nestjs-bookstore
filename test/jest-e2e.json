{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1",
    "^@domain/(.*)$": "<rootDir>/../src/domain/$1",
    "^@infra/(.*)$": "<rootDir>/../src/infra/$1",
    "^@usecases/(.*)$": "<rootDir>/../src/usecases/$1"
  },
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
